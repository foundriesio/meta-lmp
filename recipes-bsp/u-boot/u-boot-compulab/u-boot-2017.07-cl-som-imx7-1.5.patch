+static int tfp410_validate(void)
+{
+	uchar buf;
+	int ret;
+
+	/* check version */
+	ret = i2c_read(CONFIG_SYS_TFP410_ADDR, TFP410_REG_DEV_ID_L, 1, &buf, 1);
+	if (ret != 0) {
