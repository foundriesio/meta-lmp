 #include "src/shared/timeout.h"
@@ -706,9 +710,11 @@ static int shell_exec(int argc, char *argv[])
 void bt_shell_printf(const char *fmt, ...)
 {
 	va_list args;
+#ifndef HAVE_EDITLINE_READLINE
 	bool save_input;
 	char *saved_line;
 	int saved_point;
+#endif
 
 	if (queue_isempty(data.inputs))
 		return;
@@ -720,6 +726,7 @@ void bt_shell_printf(const char *fmt, ...)
 		return;
 	}
 
+#ifndef HAVE_EDITLINE_READLINE
 	save_input = !RL_ISSTATE(RL_STATE_DONE);
 
 	if (save_input) {
@@ -730,6 +737,7 @@ void bt_shell_printf(const char *fmt, ...)
 		rl_clear_visible_line();
 		rl_reset_line_state();
 	}
+#endif
 
 	va_start(args, fmt);
 	vprintf(fmt, args);
@@ -741,6 +749,7 @@ void bt_shell_printf(const char *fmt, ...)
 		va_end(args);
 	}
 
+#ifndef HAVE_EDITLINE_READLINE
 	if (save_input) {
 		if (!data.saved_prompt)
 			rl_restore_prompt();
@@ -749,6 +758,7 @@ void bt_shell_printf(const char *fmt, ...)
 		rl_redisplay();
 		free(saved_line);
 	}
+#endif
 }
 
 void bt_shell_echo(const char *fmt, ...)
@@ -829,7 +839,9 @@ static void prompt_input(const char *str, bt_shell_prompt_input_func func,
 	data.saved_func = func;
 	data.saved_user_data = user_data;
 
+#ifndef HAVE_EDITLINE_READLINE
 	rl_save_prompt();
+#endif
 	bt_shell_set_prompt(str, COLOR_HIGHLIGHT);
 }
 
@@ -896,7 +908,9 @@ int bt_shell_release_prompt(const char *input)
 
 	data.saved_prompt = false;
 
+#ifndef HAVE_EDITLINE_READLINE
 	rl_restore_prompt();
+#endif
 
 	func = data.saved_func;
 	user_data = data.saved_user_data;
@@ -1128,7 +1142,9 @@ static char **menu_completion(const struct bt_shell_menu_entry *entry,
 			break;
 		}
 
+#ifndef HAVE_EDITLINE_READLINE
 		rl_completion_display_matches_hook = entry->disp;
+#endif
 		matches = rl_completion_matches(text, entry->gen);
 		break;
 	}
@@ -1199,7 +1215,9 @@ static void signal_callback(int signum, void *user_data)
 	case SIGINT:
 		if (!queue_isempty(data.inputs) &&
 				data.mode == MODE_INTERACTIVE) {
+#ifndef HAVE_EDITLINE_READLINE
 			rl_replace_line("", 0);
+#endif
 			rl_crlf();
 			rl_on_new_line();
 			rl_redisplay();
@@ -1217,7 +1235,9 @@ static void signal_callback(int signum, void *user_data)
 	case SIGTERM:
 		if (!terminated) {
 			if (data.mode == MODE_INTERACTIVE) {
+#ifndef HAVE_EDITLINE_READLINE
 				rl_replace_line("", 0);
+#endif
 				rl_crlf();
 			}
 			mainloop_quit();
@@ -1280,7 +1300,9 @@ static void rl_init(void)
 
 	rl_attempted_completion_function = shell_completion;
 
+#ifndef HAVE_EDITLINE_READLINE
 	rl_erase_empty_line = 1;
+#endif
 	rl_callback_handler_install(NULL, rl_handler);
 
 	rl_init_history();
@@ -1432,7 +1454,11 @@ static void rl_cleanup(void)
 	if (data.history[0] != '\0')
 		write_history(data.history);
 
+#ifndef HAVE_EDITLINE_READLINE
 	rl_message("%s", "");
+#else
+	rl_crlf();
+#endif
 	rl_callback_handler_remove();
 }
 
