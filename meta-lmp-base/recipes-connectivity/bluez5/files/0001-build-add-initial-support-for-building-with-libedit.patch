+++ b/client/display.c
@@ -18,7 +18,13 @@
 #include <stdarg.h>
 #include <stdbool.h>
 #include <ctype.h>
+
+#ifdef HAVE_EDITLINE_READLINE
+#include <string.h>
+#include <editline/readline.h>
