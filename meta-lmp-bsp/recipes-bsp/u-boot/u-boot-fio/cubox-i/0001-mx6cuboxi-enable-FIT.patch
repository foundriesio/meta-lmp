From 5fd07ff3ec6bf12df6eb217e482696a6a8c51773 Mon Sep 17 00:00:00 2001
From: Ricardo Salveti <ricardo@foundries.io>
Date: Fri, 24 Apr 2020 23:33:26 -0700
Subject: [PATCH] mx6cuboxi: enable FIT

Signed-off-by: Ricardo Salveti <ricardo@foundries.io>
Signed-off-by: Michael Scott <mike@foundries.io>
---
 configs/mx6cuboxi_defconfig | 7 +++++++
 1 file changed, 7 insertions(+)

diff --git a/configs/mx6cuboxi_defconfig b/configs/mx6cuboxi_defconfig
index a13243fca6..7e5e532a10 100644
--- a/configs/mx6cuboxi_defconfig
+++ b/configs/mx6cuboxi_defconfig
@@ -45,3 +45,10 @@ CONFIG_VIDEO_IPUV3=y
 CONFIG_VIDEO=y
 # CONFIG_VIDEO_SW_CURSOR is not set
 CONFIG_OF_LIBFDT=y
+CONFIG_FIT=y
+CONFIG_FIT_VERBOSE=y
+CONFIG_FIT_SIGNATURE=y
+CONFIG_USE_BOOTCOMMAND=y
+CONFIG_BOOTCOMMAND="run findfdt; if test ${devtype}1 = 1; then setenv devtype mmc; fi; if test ${devnum}x = x; then setenv devnum 0; fi; fatload ${devtype} ${devnum}:1 ${ramdiskaddr} /boot.itb; setenv verify 1; source ${ramdiskaddr}; reset"
+CONFIG_BOOTCOUNT_LIMIT=y
+CONFIG_BOOTCOUNT_ENV=y
